---
import FacebookIcon from "./icons/FacebookIcon.astro";
import InstagramIcon from "./icons/InstagramIcon.astro";
import LinkedinIcon from "./icons/LinkedinIcon.astro";
import WhatsappIcon from "./icons/WhatsappIcon.astro";
---

<section class="footer">
    <div class="maincontainer">
        <div class="logo-footer">
            <img
                src="./juriscorp.svg"
                alt="Juriscorp despacho de abogados en Chihuahua"
            />
        </div>
        <div class="contact-form">
            <h3>Cont√°ctanos por correo</h3>
            <input placeholder="info@juriscorp.com.mx" />
        </div>
        <div class="socialmedia">
            <a
                href="https://www.facebook.com/profile.php?id=61558144923852"
                target="_blank"
                rel="noopener"
            >
                <FacebookIcon color="white" width="30" height="30" /></a
            >
            <a
                href="https://fb.me/4hW2wogdU"
                target="_blank"
                rel="noopener"
            >
                <WhatsappIcon color="white" width="30" height="30" />
            </a>
            <a
                href="https://www.linkedin.com/company/juriscorp-mx"
                target="_blank"
                rel="noopener"
            >
                <LinkedinIcon color="white" width="30" height="30" />
            </a>
            <a
                href="https://www.instagram.com/info_juriscorp/"
                target="_blank"
                rel="noopener"
            >
                <InstagramIcon color="white" width="30" height="30" />
            </a>
        </div>
    </div>
    <div class="developer">
        <h4>Desarrollado por</h4>
        <a href="https://devjaredgarcia.com/" target="_blank" rel="noopener"
            >@GarciaJared</a
        >
    </div>
</section>

<style>
    .footer {
        background-color: #151313;
        color: white;
        padding: 2rem 1rem;
        font-family: Arial, sans-serif;
    }

    .maincontainer {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
        max-width: 1200px;
        margin: auto;
        padding-bottom: 2rem;
    }

    .logo-footer {
        display: flex;
        justify-content: flex-start;
        align-items: flex-start;
    }

    .logo-footer img {
        width: 150px;
        height: auto;
    }

    .contact-form {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .contact-form h3 {
        margin-bottom: 1rem;
        font-weight: 300;
        text-align: center;
    }

    .contact-form input {
        width: 100%;
        max-width: 300px;
        padding: 0.75rem;
        border-radius: 5px;
        border: none;
        outline: none;
    }

    .socialmedia {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1.5rem;
    }

    .socialmedia a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem;
        transition: transform 0.3s ease;
    }

    .socialmedia a:hover {
        transform: scale(1.1);
    }

    .developer {
        text-align: center;
        padding-top: 1rem;
        border-top: 1px solid #333;
    }

    .developer h4 {
        margin-bottom: 0.5rem;
        font-weight: 300;
    }

    .developer a {
        color: #f99e2e;
        text-decoration: none;
        font-weight: bold;
    }

    /* Estilos Responsivos */
    @media (max-width: 768px) {
        .maincontainer {
            grid-template-columns: 1fr;
            text-align: center;
            gap: 1rem;
        }

        .logo-footer,
        .contact-form,
        .socialmedia {
            justify-content: center;
            align-items: center;
        }

        .contact-form input {
            max-width: 90%;
        }
    }

    @media (max-width: 480px) {
        .contact-form h3 {
            font-size: 1.2rem;
        }

        .contact-form input {
            font-size: 1rem;
        }

        .developer {
            font-size: 0.9rem;
        }

        .socialmedia a {
            padding: 0.5rem 0.75rem;
        }
    }
</style>
