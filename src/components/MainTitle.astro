---
interface MainTitleProps {
    title: string;
    color: string;
}
const { title, color } = Astro.props;
---

<section>
    <div class="container-title">
        <div class="title-line"></div>
        <div class="main-title">
            <h2>{title}</h2>
        </div>
    </div>
</section>

<style>
    .container-title {
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
    }
    .title-line {
        width: 100%;
        height: 3px;
        background-color: #f99e2e;
        margin-bottom: 1rem;
    }
    .main-title {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 1rem;
    }
</style>
