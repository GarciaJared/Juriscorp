---
interface ExperienceProps {
  intro: string;
  xp: number;
  category: string;
  width: string;
  height: string;
}
const { intro, width, height } = Astro.props;
const Xp = [
  { category: "Familiares", xp: 119 },
  { category: "Civiles", xp: 71 },
  { category: "Corporativos", xp: 48 },
  { category: "Penales", xp: 22 },
];

---
<section id="experience">
  <div class="img-container">
    <img
      src="./leybanner.webp"
      alt="Juriscorp despacho de abogados en Chihuahua"
      width={width}
      height={height}
    />
    <div class="overlay">
      <div class="title">
        <h1>Nuestra Experiencia</h1>
      </div>
      <div class="intro" style="padding-bottom: 3px;">
        <p>{intro}</p>
      </div>
      <div class="xp-container">
        {Xp.map((item) => (
          <div class="solved">
            <h2 class="number">{item.xp}</h2>
            <h4 class="category">{item.category}</h4>
          </div>
        ))}
      </div>
    </div>
  </div>
 
</section>



<style>
  .title{
    color: white;
  }
  .img-container {
    position: relative;
    width: 100%;
    height: auto;
    overflow: hidden;
  }

  .img-container img {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 1rem;
    box-sizing: border-box;
  }

  .intro {
    text-align: center;
    margin-bottom: 1rem;
    color: white;
    font-size: 1.2rem;
    line-height: 1.6;
    max-width: 800px;
  }

  .xp-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 1rem;
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    color: white;
    text-align: center;
  }

  .solved {
    border-radius: 8px;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    transition: transform 0.3s ease; /* Añade transición */
  }

  .solved:hover {
    transform: scale(1.05); /* Efecto de hover */
  }

  .number {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1;
    margin-bottom: 0.5em;
  }

  .category {
    font-size: 1.2rem;
    font-weight: 400;
    line-height: 1.5;
  }

  @media (min-width: 768px) {
    .xp-container {
      grid-template-columns: repeat(4, 1fr);
      gap: 1.5rem;
    }

    .number {
      font-size: 3.5rem;
    }

    .category {
      font-size: 1.4rem;
    }

    .intro {
      font-size: 1.4rem;
    }
  }

  @media (min-width: 1024px) {
    .xp-container {
      gap: 2rem;
    }

    .number {
      font-size: 4rem;
    }

    .category {
      font-size: 1.5rem;
    }

    .intro {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .title{
      margin-top: -300px;
      color: white;
    }
    .intro {
      font-size: 1rem;
    }
    .overlay{
      height: 1000px;
    }
    .img-container img {
      height: 1000px;
      object-fit: cover;
    }
    .xp-container {
      width: 100%;
      height: 200px;
      grid-template-columns: repeat(2, 1fr);
    }
    
}

</style>
