---
interface ExperienceProps {
    intro: string;
    xp: number;
    category: string;
    width: string;
    height: string;
}
const { intro, width, height } = Astro.props;
const Xp = [
    { category: "Familiares", xp: 15 },
    { category: "Civiles", xp: 10 },
    { category: "Corporativos", xp: 5 },
    { category: "Penales", xp: 20 },
];
---

<section>
    <div class="img-container">
        <img
            src="./banner.webp"
            alt="Juriscorp despacho de abogados en Chihuahua"
            width={width}
            height={height}
        />
        <div class="overlay">
            <div class="intro">
                <p>{intro}</p>
            </div>
            <div class="container">
                {
                    Xp.map((item) => (
                        <div class="solved">
                            <h2 class="number">{item.xp}</h2>
                            <h4 class="category">{item.category}</h4>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>

<style>
    .img-container {
        position: relative;
    }
    .img-container img {
        display: block;
    }
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: black;
        opacity: 0.5; /* Adjust opacity as needed */
        z-index: 1;
    }
    .container {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        column-gap: 20px;
        padding: 1rem;
        max-width: 800px;
        margin: auto;
        color: #080000;
        font-size: 20px;
        line-height: 1.6;
    }
    .intro {
        padding: 1rem;
        max-width: 800px;
        margin: auto;
        color: white;
        font-size: 20px;
        line-height: 1.6;
    }
    .solved {
        padding: 1rem;
        max-width: 800px;
        margin: auto;
        color: white;
        font-size: 20px;
        line-height: 1.6;
    }
    .number {
        font-size: 4rem;
        font-weight: 700;
        line-height: 1;
        margin-bottom: 0.5em;
        align-content: start;
    }
    .category {
        font-size: 1.5rem;
        font-weight: 400;
        line-height: 1.5;
        align-content: center;
    }
</style>
