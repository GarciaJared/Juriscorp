--- 
import Pillars from "./Pillars.astro";

interface Props {
  width: string;
  height: string;
}

const { width, height } = Astro.props;
---

<section id="home">
  <div class="img-container">
    <img
      src="./banner.webp"
      alt="Juriscorp despacho de abogados en Chihuahua"
      width={width}
      height={height}
    />
    <div class="overlay"></div>
  </div>
  <div class="main-text">
    <h1>Son tres</h1>
    <p>los pilares que sostienen nuestro esfuerzo.</p>
    <Pillars />
  </div>
</section>

<style>
  .img-container {
    position: relative;
    width: 100%;
    height: auto;
    overflow: hidden;
  }

  .img-container img {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover; /* Asegura que la imagen se escale correctamente */
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.85); /* Cambiado a rgba para mayor control */
    z-index: 1;
  }

  .main-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    text-align: center;
    color: white;
    padding: 1rem;
    box-sizing: border-box;
  }

  .main-text h1 {
    font-size: 2rem; /* Tamaño base */
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 0.5em;
  }

  .main-text p {
    font-size: 1rem; /* Tamaño base */
    font-weight: 400;
    line-height: 1.5;
    margin-bottom: 1rem;
  }

  /* Responsividad para pantallas pequeñas (móviles) */
  @media (max-width: 480px) {
    .main-text {
      top: 60%; /* Ajusta la posición del texto */
      padding: 0.5rem;
    }

    .main-text h1 {
      font-size: 2.5rem;
    }

    .main-text p {
      font-size: 0.875rem;
    }
  }

  /* Responsividad para tablets y pantallas medianas */
  @media (min-width: 481px) and (max-width: 768px) {
    .main-text h1 {
      font-size: 3rem;
    }

    .main-text p {
      font-size: 1.125rem;
    }
  }

  /* Responsividad para pantallas grandes */
  @media (min-width: 769px) and (max-width: 1024px) {
    .img-container {
      height: 500px; /* Aumentada para más grande */
    }

    .main-text h1 {
      font-size: 4rem;
    }

    .main-text p {
      font-size: 1.5rem;
    }
  }

  /* Responsividad para pantallas extra grandes */
  @media (min-width: 1025px) {
    .img-container {
      height: 700px; /* Aumentada para más grande */
    }

    .main-text h1 {
      font-size: 5rem;
    }

    .main-text p {
      font-size: 1.75rem;
    }
  }
</style>
